{
  "manifest_version": 2,
  "name": "FBCryp(GP)ter",

  "description": "Crypt messagge on Facebook with PGP",
  "version": "1.0",
  "icons": {
    "128": "include/images/logo/padlock.x64.png"
  },
  "background": {
    "scripts" : ["include/ts/background.js"]
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts" :[{
    "matches" : ["https://www.facebook.com/messages/*"],
    "js" : ["include/ts/FacebookMessageScript.js"]
  }],
  "permissions": ["https://www.facebook.com/messages/*", "notifications", "tabs", "cookies", "activeTab", "webNavigation"]
}